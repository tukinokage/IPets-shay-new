<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="60dp"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_preview_iv"
        android:src="@drawable/ic_img_preview_default"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/img_preview_black_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@color/material_grey_800"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/img_preview_tip_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="上传失败"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/img_preview_cancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="@id/img_preview_iv"
        app:layout_constraintTop_toTopOf="@id/img_preview_iv"
        android:background="@drawable/ic_cancel"
        android:layout_margin="3dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
