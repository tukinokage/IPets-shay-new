<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="resourceName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.PetInfoActivity"
    android:background="@color/material_grey_200"
    android:orientation="vertical">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="350dp">

                <ImageView
                    android:id="@+id/activity_pet_info_pics_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/info_bg"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"/>

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="60dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.5"
                        android:layout_gravity="center"
                        android:background="@drawable/text_nums_radius_bg_shape"
                        />
                    <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
                        android:id="@+id/pet_info_pic_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/8"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/pet_info_content_text"/>

        <LinearLayout
            android:id="@+id/activity_pet_info_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/material_orange_400">

            <Button
                android:id="@+id/pet_info_top_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_arrow_back_black_24dp"/>
            <TextView
                android:id="@+id/pet_info_top_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/material_white"
                android:gravity="center"
                android:minHeight="?actionBarSize"
                android:text="å•Šæˆ‘æ˜¯é©´ðŸ±"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="20dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/activity_pet_info_like_fab"
                android:backgroundTint="@color/colorPrimary"
                app:borderWidth="0dp"
                app:elevation="5dp"
                app:pressedTranslationZ="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:srcCompat="@drawable/ic_like_defult"
                app:fabCustomSize="50dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/activity_pet_info_share_fab"
                android:backgroundTint="@color/colorPrimary"
                app:borderWidth="0dp"
                app:elevation="5dp"
                app:pressedTranslationZ="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                app:srcCompat="@drawable/ic_share"
                app:fabCustomSize="50dp"/>

        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>